    <!--Toast-->
    <style name="Toast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/black</item> <!--텍스트 색상-->
        <item name="stFont">@font/font_1_res</item> <!--폰트 색상-->
        <item name="stTextSize">50sp</item> <!--텍스트 사이즈-->
        <item name="stColorBackground">@color/white</item> <!--텍스트 배경색-->
        <item name="stStrokeWidth">3dp</item> <!--텍두리 두께-->
        <item name="stStrokeColor">@color/black</item> <!--테두리 색상-->
        <item name="stLength">LONG</item> LONG or SHORT <!-- 지속시간 -->
        <item name="stGravity">top</item> top or center <!-- 위치 -->
        <item name="stRadius">20dp</item> <!--가장자리 둥굴림-->
    </style>

